  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true
    },
    {
      "name": "Python: Celery",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "console": "integratedTerminal",
      "args": ["-A", "backend", "worker", "-l", "info", "-P", "solo"]
    },
    {
      "name": "Python: Django Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["test"],
